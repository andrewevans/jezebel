<h1>{{user.username}}'s palette</h1>

{{#each user.palettes as |palette|}}
  <h2>{{palette.title}}</h2>

  {{#sortable-group tagName="div" model=user.palette onChange="reorderItems" as |group|}}
    {{#each palette.shades as |shade|}}
      {{#sortable-item tagName="div" model=shade group=group handle=".handle"}}
          <button class="btn btn-default btn-lg btn-block handle">
              <sup>{{shade.weight}}|{{shade.weight_ranked}}</sup> {{shade.color.title}} <b>{{shade.value}}</b>
          </button>
      {{/sortable-item}}
    {{/each}}
  {{/sortable-group}}
{{/each}}
