<h3>Add shade to palette</h3>

<ul class="list-group">
    <li class="list-group-item">
        <nav class="navbar navbar-default navbar-static">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                  {{#bs-dropdown tagName="li"}}
                    {{#bs-dropdown-toggle}}Choose a color <span class="caret"></span>{{/bs-dropdown-toggle}}
                    {{#bs-dropdown-menu}}
                      {{#each colors as |color|}}
                          <li {{action 'selectColor' color}}>{{#link-to "goldlab"}}{{color.title}}{{/link-to}}</li>
                      {{/each}}
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </ul>
            </div>
        </nav>
    </li>
    <li class="list-group-item">
      {{input type="text" class="form-control" placeholder="Enter a value" value=shade_value}}
    </li>
    <li class="list-group-item">
        <button type="button" {{action 'addShade'}} class="btn btn-default btn-lg btn-block">Add shade!</button>
    </li>
</ul>
